<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:hint="Nazwisko"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editName"
        android:ems="8"
        android:inputType="textPersonName"
        android:hint="Imię"
        android:layout_below="@id/editSurname"
        android:layout_alignStart="@id/editSurname"
        android:layout_alignLeft="@id/editSurname"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTitle"
        android:ems="8"
        android:inputType="text"
        android:hint="Tytuł"
        android:layout_below="@id/editName"
        android:layout_alignLeft="@id/editName"
        android:layout_alignStart="@id/editName"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNotes"
        android:hint="Notatka"
        android:ems="16"
        android:inputType="text"
        android:layout_below="@id/editTitle"
        android:layout_alignLeft="@id/editTitle"
        android:layout_alignStart="@id/editTitle"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:text="Start"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopButton"
        android:text="Stop"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eraseButton"
        android:text="Skasuj"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_above="@id/startButton"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_marginStart="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:text="Zapisz"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_above="@id/startButton"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        android:layout_marginEnd="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to record"
        android:textSize="18sp"
        android:id="@+id/recordStatus"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/eraseButton"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>